<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


    <ImageView
            android:id="@+id/icon"

            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"

            android:layout_width="70dp"
            android:layout_height="70dp"

            android:background="@drawable/image_icon"
            android:contentDescription="@string/app_name"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_add"

            android:layout_marginEnd="250dp" />


    <EditText
            android:id="@+id/tv_header"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/playlist_name"
            android:textSize="27sp"
            android:textColor="@color/black"

            android:singleLine="true"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="20dp"
            android:autofillHints="true"
            android:inputType="textPersonName" />

    <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:background="@drawable/ic_plus"
            android:contentDescription="@string/add"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginEnd="5dp" />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"

            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            app:layout_constraintBottom_toTopOf="@+id/btn_or"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    <Button
            android:id="@+id/btn_and"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button"
            android:text="@string/and"
            android:textSize="25sp"

            app:layout_constraintTop_toTopOf="@id/btn_or"
            app:layout_constraintBottom_toBottomOf="@id/btn_or"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_or" />

    <Button
            android:id="@+id/btn_or"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button"
            android:text="@string/or"
            android:textSize="25sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginBottom="30dp" />

    <Button
            android:id="@+id/btn_xor"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button"
            android:text="@string/xor"
            android:textSize="25sp"

            app:layout_constraintTop_toTopOf="@id/btn_or"
            app:layout_constraintBottom_toBottomOf="@id/btn_or"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_or" />


</androidx.constraintlayout.widget.ConstraintLayout>