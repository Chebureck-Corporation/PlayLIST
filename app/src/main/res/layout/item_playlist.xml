<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_playlist"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"

            android:contentDescription="@string/dots"
            android:background="@drawable/shape_bordered"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_margin="5dp" />

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/TextView"

            android:text="@string/playlist_name"
            android:textSize="24sp"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@id/iv_playlist"
            app:layout_constraintStart_toStartOf="@id/iv_playlist"
            app:layout_constraintEnd_toEndOf="@id/iv_playlist" />


</androidx.constraintlayout.widget.ConstraintLayout>